@{
    ViewData["Title"] = "Dashboard";
}

<h1 class="mt-4 text-center titlecolor">Dashboard</h1>



<div class="d-flex justify-content-center">
<div class="d-inline-block">
    <p class="text-center">Active</p>
    <div class="circle" id="active"></div>
</div>

<div class="d-inline-block">

    <p class="text-center">Inactive</p>
    <div class="circle" id="inactive"></div>

</div>

<div class="d-inline-block">

    <p class="text-center">Total</p>
    <div class="circle" id="total"></div>

</div>
</div>

<div class="d-flex justify-content-center">
<canvas id="customerDashboardGraph" style="width:100%;max-width:700px;"></canvas>
</div>
@section Scripts {

    <script
src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js">
</script>
   <script src="~/js/Dashboard.js"></script>
}
